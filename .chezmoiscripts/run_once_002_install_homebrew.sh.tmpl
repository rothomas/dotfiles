#!/usr/bin/env bash

{{ if eq .chezmoi.os "linux" -}}

>&2 echo "Installing Homebrew (Linux)"

mkdir -p ".linuxbrew/share/zsh"
eval "$({{ .brew }} shellenv)"
brew update --force --quiet
chmod -R go-w "$(brew --prefix)/share/zsh"

{{- else if eq .chezmoi.os "darwin" -}}

>&2 echo "Installing Homebrew (Darwin)"

if ! [ -f "{{ .brew }}" ]; then
  echo '' | NONINTERACTIVE=1 .installers/install_homebrew.sh
else
  >&2 echo "homebrew: already installed"
fi

{{- end }}
