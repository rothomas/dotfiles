#!/usr/bin/env bash
{{ if (eq .chezmoi.os "linux") }}

source "{{ .chezmoi.sourceDir }}/.helpers/prereq_functions"
use_homebrew

if ! installed op; then
  cd /tmp
  download https://cache.agilebits.com/dist/1P/op/pkg/v1.12.4/op_linux_amd64_v1.12.4.zip
  unzip op_linux_amd64_v1.12.4.zip
  cd op_linux_amd64_v1.12.4
  gpg --receive-keys 3FEF9748469ADBE15DA7CA80AC2D62742012EA22
  gpg --verify op.sig op
  cp op ~/bin
  cd -
  rm -rf op_linux_amd64_v1.12.4
  rm op_linux_amd64_v1.12.4.zip
fi

~/bin/op update

{{ end }}
