#!/usr/bin/env bash

if [[ -z "${ZELLIJ}" ]]; then
  if [[ $# == 0 ]]; then
    if [[ -z "${SESSION_ID}" ]]; then
      session_name="$(hostname -s)"
    else
      session_name="${SESSION_ID}"
    fi
    \zellij attach "${session_name}" || \zellij -s "${session_name}"
  elif [[ "$1" == "new" ]]; then
    if [[ ! -z "$2" ]]; then
      session_name="${2}"
    elif [[ ! -z "${SESSION_ID}" ]]; then
      session_name="${SESSION_ID}"
    else
      session_name="$(mktemp -u $(hostname -s).XXX)"
    fi
    \zellij -s "${session_name}"
  else
    \zellij "$@"
  fi
fi

